# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Key (Optional - for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# EU Green Policies Chatbot - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your environment variables

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=eu-green-chatbot
APP_VERSION=1.0.0
APP_PORT=3000

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
API_PORT=4000
FRONTEND_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
AI_SERVICE_PORT=8000
AI_SERVICE_HOST=0.0.0.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# WHISPER/SPEECH-TO-TEXT CONFIGURATION
# =============================================================================
# Maximum audio file size for processing (25MB is OpenAI Whisper limit)
MAX_AUDIO_SIZE=26214400
# Temporary directory for audio file processing
TEMP_DIR=/tmp/audio
# Supported audio formats
SUPPORTED_AUDIO_FORMATS=mp3,wav,webm,m4a,ogg,flac

# Hugging Face Configuration (alternative/additional)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# VECTOR DATABASE (QDRANT) CONFIGURATION
# =============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key-if-using-cloud
QDRANT_COLLECTION_NAME=eu_green_policies
QDRANT_VECTOR_SIZE=384

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# DATABASE CONFIGURATION (if using additional database)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/eu_green_chatbot
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=eu_green_chatbot
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# DOCUMENT PROCESSING
# =============================================================================
MAX_DOCUMENT_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,txt,docx,html
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# RAG SYSTEM CONFIGURATION
# =============================================================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_LENGTH=8000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Web Search and Scraping
TAVILY_API_KEY=your-tavily-api-key-here
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# EU Official Sources (if applicable)
EU_PUBLICATIONS_API_URL=https://op.europa.eu/api/
EUR_LEX_API_URL=https://eur-lex.europa.eu/api/

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
COMPOSE_PROJECT_NAME=eu-green-chatbot
COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml
